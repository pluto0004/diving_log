<h1 class="text-center mb-3">{{title}}</h1>

<h2 class="mb-1">Add User</h2>
<form action='/api/users' method="POST" class="mb-4" >
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name='name' class="form-control">
    </div>
    <div class="form-group">
        <label for="license">License</label>
        <select class="form-select" name="license">
            <option value="OWD">OWD(Open Water Diver)</option>
            <option value="AOWD">AOWD(Advanced Open Water Diver)</option>
            <option value="RD">RD(Rescue Diver)</option>
            <option value="DM">DM(Dive Master)</option>
            <option value="OWSI">OWSI(Open Water Instructor)</option>
        </select>
    </div>
    <br>
    <input type="submit" value="Add user" class="btn btn-primary btn-block">

</form>

<h2 class="mb-1">Delete User</h2>
<form action="/api/users/:id" method="DELETE" class="mb-4" >
    <div class="form-group">
        <label for="name">Id</label>
        <input type="number" name='id' class="form-control">
    </div>
    <br>
    <input type="submit" value="Delete user" class="btn btn-primary btn-block">

</form>


<h2 class="mb-1">Add logs</h2>
<form action='/api/logs' method="POST" class="mb-4">
    <div class="form-group">
        <label for="date">Date</label>
        <input type="datetime-local" name="date_time" class="form-control" >
    </div>
    <div class="form-group">
        <label for="user_id">User ID</label>
        <input type="number" name="user_id" class="form-control" min="1" >
    </div>
    <div class="form-group">
        <label for="buddy_name">Buddy's Name</label>
        <input type="text" name="buddy_name" class="form-control" >
    </div>
    <div class="form-group">
        <label for="location">Location</label>
        <input type="text" name="location_name" class="form-control" >
    </div>
    <div class="form-group">
        <label for="temperature">Temperature</label>
        <input type="number" name="temperature_in_c" class="form-control" >
    </div>
    <div class="form-group">
        <label for="ave_depth">Average Depth</label>
        <input type="number" name="ave_depth_in_m" class="form-control" min="0" max="40" >
        <label for="max">Max Depth</label>
        <input type="number" name="max_depth_in_m" class="form-control" min="0" max="40" >
    </div>
    
    <br>
    <input type="submit" value="Add logs" class="btn btn-primary btn-block">

</form>


<h4 class="mt-3">Current Users</h4>


<ul class="list-group">
    {{#each users}}
        <li onclick="" class="list-group-item">#{{this.id}}: {{this.name}} / License: {{this.license}} diver</li>
    {{/each}}
</ul>


<h4 class="mt-3">Current logs</h4>

<ul class="list-group">
    {{#each logs}}
        <li class="list-group-item">Date: {{this.date_time}}, Location: {{this.location_name}}, Temperature: {{this.temperature_in_c}}, Ave_depth: {{this.ave_depth_in_m}}, UserId: {{this.user_id}} </li>
    {{/each}}
</ul>

